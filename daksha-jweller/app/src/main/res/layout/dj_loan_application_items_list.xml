<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:forceHasOverlappingRendering="true"
    app:cardBackgroundColor="#BEE1E6"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/loan_application_item_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left"
                    android:text="item description"
                    android:textColor="@color/black"
                    android:textFontWeight="800"
                    android:textSize="15dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/loan_application_edit_item"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left"
                    android:text="purity:"
                    android:textColor="@color/black"
                    android:textFontWeight="800"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/loan_application_item_purity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left"
                    android:text="1011.89"
                    android:textColor="#E44949"
                    android:textFontWeight="800"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left"
                    android:text="total items:"
                    android:textColor="@color/black"
                    android:textFontWeight="800"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/loan_application_item_total_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left"
                    android:text="10"
                    android:textColor="#E44949"
                    android:textFontWeight="800"
                    android:textSize="15dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left"
                    android:text="net weight:"
                    android:textColor="@color/black"
                    android:textFontWeight="800"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/loan_application_item_total_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left"
                    android:text="10"
                    android:textColor="#E44949"
                    android:textFontWeight="800"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left"
                    android:text="market value:"
                    android:textColor="@color/black"
                    android:textFontWeight="800"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/loan_application_item_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left"
                    android:text="1011.89"
                    android:textColor="#E44949"
                    android:textFontWeight="800"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>


