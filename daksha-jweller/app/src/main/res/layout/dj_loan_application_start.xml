<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loan_application_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    tools:context=".ui.dj.LoanApplicationStartFragment">

    <FrameLayout
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="@drawable/shape"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Loan Bank"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/loanApplicationBanks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_even"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Page No / Book No :"
                    android:paddingRight="5dp"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/loanApplicationPageNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Name"
                    android:textColor="@android:color/holo_red_light"
                    android:textFontWeight="600"
                    android:textSize="15dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/loanApplicationPageNoBtnEdit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edit2"
                    android:gravity="bottom" />

                <EditText
                    android:id="@+id/loanApplicationPageNoEdit"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:fontFamily="monospace"
                    android:hint="Page No / Book No"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_even"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:layout_marginTop="3dp"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/customerName"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:hint="Customer Name"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_even"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/customerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textSize="15dp"
                    android:fontFamily="monospace"
                    android:hint="Customer Address"
                    android:inputType="textPostalAddress" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_even"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Mobile"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/customerMobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:hint="Customer Mobile No"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_even"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Account No"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/customerBankAcc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="3"
                    android:textSize="15dp"
                    android:fontFamily="monospace"
                    android:hint="Bank Account Number"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Click upload to submit customer photo"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="14dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/photo_capture"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/ic_menu_upload"
                    android:gravity="bottom" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">


                <ImageView
                    android:id="@+id/customerPhoto"
                    android:layout_width="200dp"
                    android:visibility="gone"
                    android:layout_height="180dp"></ImageView>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Customer Bank"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/customerBankAccName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/otherBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_even"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <EditText
                    android:id="@+id/customerBankName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="3"
                    android:fontFamily="monospace"
                    android:hint="Bank Name"
                    android:ems="10"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Loan Type"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/loanApplicationType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_even"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Bag No / Packet No "
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/loan_application_bag_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textSize="15dp"
                    android:fontFamily="monospace"
                    android:hint="Bag No / Packet No"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_even"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Joint Custody"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/jointCustody"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:hint="Name of joint custody"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:fontFamily="monospace"
                    android:gravity="center|left"
                    android:text="Loan Amount"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/customerLoanAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="3"
                    android:fontFamily="monospace"
                    android:hint="Loan Amount"
                    android:textSize="15dp"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/clearForm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_button"
                    android:fontFamily="monospace"
                    android:text="Clear"
                    android:textStyle="italic"
                    android:textAllCaps="false"

                    android:textColor="#131212" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveAndNext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_button"
                    android:fontFamily="monospace"
                    android:text="Next"
                    android:textStyle="italic"
                    android:textAllCaps="false"
                    android:textColor="#131212" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</androidx.core.widget.NestedScrollView>
